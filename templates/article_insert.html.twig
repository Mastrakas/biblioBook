<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <h1 class="text-center">Ajouter une article</h1>
    {{ form_start(formView) }}
    <div class="bg-secondary container p-3 rounded">
        <div class="row m-2 align-items-center">
            <div class="col-6 text-right">{{ form_label(formView.title) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.title) }}</div>
            {{ form_errors(formView.title) }}
        </div>

        <div class="row m-2 align-items-center">
            <div class="col-6 text-right">{{ form_label(formView.content) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.content) }}</div>
            {{ form_errors(formView.content) }}
        </div>

        <div class="row m-2 align-items-center">
            <div class="col-6 text-right">{{ form_label(formView.image) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.image) }}</div>
            {{ form_errors(formView.image) }}
        </div>

        <div class="row m-2 align-items-center">
            <div class="col-6 text-right">{{ form_label(formView.datepublication) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.datepublication) }}</div>
            {{ form_errors(formView.datepublication) }}
        </div>

        <div class="row m-2 align-items-center">
            <div class="col-6 text-right">{{ form_label(formView.datecreation) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.datecreation) }}</div>
            {{ form_errors(formView.datecreation) }}
        </div>

        <div class="row m-2">
            <div class="col-6 text-right">{{ form_label(formView.category) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.category) }}</div>
            {{ form_errors(formView.category) }}
        </div>

        <div class="row m-2">
            <div class="col-6 text-right">{{ form_label(formView.published) }}</div>
            <div class="col-6 text-left">{{ form_widget(formView.published) }}</div>
            {{ form_errors(formView.published) }}
        </div>

        <div class="row m-2">
            <div class="col-6 text-right">{{ form_widget(formView.valider) }}</div>
        </div>
    </div>
    {{ form_end(formView) }}
</body>
</html>